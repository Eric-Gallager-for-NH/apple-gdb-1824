CPPFLAGS = -I.. -I../config -I../../include -I../../bfd -I../../intl
DEFS = -DHAVE_CONFIG_H
CFLAGS = -ggdb ${CPPFLAGS} ${DEFS}
CC = cc

SERVER = remote_server.o\
		 remote_inflow.o\
		 remote_utils.o\
		 remote_gutils.o 

prog : $(SERVER)
	$(CC) -ggdb -o serve $(SERVER) 

clean:
	rm -f $(SERVER) serve prog

distclean: clean
